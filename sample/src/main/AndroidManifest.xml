<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.henrytao.mddemo" >

    <uses-permission android:name="com.android.vending.BILLING" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.InfoActivity"
            android:label="@string/title_activity_info" />
        <activity
            android:name=".activity.ListActivity"
            android:label="@string/title_activity_list" />
        <activity
            android:name=".activity.IntroductionActivity"
            android:label="@string/title_activity_introduction" />
        <activity
            android:name=".activity.ButtonActivity"
            android:label="@string/title_activity_button" />
        <activity
            android:name=".activity.FabActivity"
            android:label="@string/title_activity_fab" />
        <activity
            android:name=".activity.IconActivity"
            android:label="@string/title_activity_icon" />
        <activity
            android:name=".activity.ColorActivity"
            android:label="@string/title_activity_color" />
        <activity
            android:name=".activity.TypographyActivity"
            android:label="@string/title_activity_typography" />
        <activity
            android:name=".activity.BottomSheetActivity"
            android:label="@string/title_activity_bottom_sheet" />
        <activity
            android:name=".activity.DialogActivity"
            android:label="@string/title_activity_dialog" >
        </activity>
    </application>

</manifest>
