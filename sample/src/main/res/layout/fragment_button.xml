<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  tools:context=".activity.ListsActivity"
  style="@style/MdList">

  <LinearLayout style="@style/MdList">

    <TextView
      android:text="Button types"
      style="@style/MdSubHeader.List" />

    <!-- ////////////////////////////////////////////////////////////////////////// -->
    <!-- Enable -->
    <!-- ////////////////////////////////////////////////////////////////////////// -->

    <LinearLayout style="@style/AppStyle.Grid">

      <RelativeLayout style="@style/AppStyle.Grid.Item">

        <Button
          android:text="@string/text_button"
          style="@style/MdButton" />
      </RelativeLayout>

      <RelativeLayout style="@style/AppStyle.Grid.Item">

        <Button
          android:text="@string/text_button"
          style="@style/MdButton" />
      </RelativeLayout>

      <RelativeLayout style="@style/AppStyle.Grid.Item">

        <Button
          android:text="@string/text_button"
          style="@style/MdButton.Borderless" />
      </RelativeLayout>
    </LinearLayout>

    <LinearLayout style="@style/AppStyle.Grid">

      <RelativeLayout style="@style/AppStyle.Grid.Item">

        <Button
          android:text="@string/text_button"
          style="@style/MdButton" />
      </RelativeLayout>

      <RelativeLayout style="@style/AppStyle.Grid.Item">

        <Button
          android:text="@string/text_button"
          style="@style/MdButton.Colored" />
      </RelativeLayout>

      <RelativeLayout style="@style/AppStyle.Grid.Item">

        <Button
          android:text="@string/text_button"
          style="@style/MdButton.Borderless.Colored" />
      </RelativeLayout>
    </LinearLayout>

    <!-- ////////////////////////////////////////////////////////////////////////// -->
    <!-- Disable -->
    <!-- ////////////////////////////////////////////////////////////////////////// -->

    <LinearLayout style="@style/AppStyle.Grid">

      <RelativeLayout style="@style/AppStyle.Grid.Item">

        <Button
          android:enabled="false"
          android:text="@string/text_button"
          style="@style/MdButton" />
      </RelativeLayout>

      <RelativeLayout style="@style/AppStyle.Grid.Item">

        <Button
          android:enabled="false"
          android:text="@string/text_button"
          style="@style/MdButton" />
      </RelativeLayout>

      <RelativeLayout style="@style/AppStyle.Grid.Item">

        <Button
          android:enabled="false"
          android:text="@string/text_button"
          style="@style/MdButton.Borderless" />
      </RelativeLayout>
    </LinearLayout>

    <LinearLayout style="@style/AppStyle.Grid">

      <RelativeLayout style="@style/AppStyle.Grid.Item">

        <Button
          android:enabled="false"
          android:text="@string/text_button"
          style="@style/MdButton" />
      </RelativeLayout>

      <RelativeLayout style="@style/AppStyle.Grid.Item">

        <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:enabled="false"
          android:text="@string/text_button"
          style="@style/MdButton.Colored" />
      </RelativeLayout>

      <RelativeLayout style="@style/AppStyle.Grid.Item">

        <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:enabled="false"
          android:text="@string/text_button"
          style="@style/MdButton.Borderless.Colored" />
      </RelativeLayout>
    </LinearLayout>
  </LinearLayout>
</LinearLayout>