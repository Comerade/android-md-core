<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  style="@style/MdCardView.Card">

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
      android:layout_height="@dimen/mdListItemHeight_sm"
      android:gravity="center_vertical"
      android:paddingLeft="@dimen/mdLayoutSpacing"
      android:paddingRight="@dimen/mdLayoutSpacing_lg"
      android:text="Create group chat"
      style="@style/MdText.Body1.SingleLine" />

    <TextView
      android:layout_height="@dimen/mdListItemHeight_sm"
      android:gravity="center_vertical"
      android:paddingLeft="@dimen/mdLayoutSpacing"
      android:paddingRight="@dimen/mdLayoutSpacing_lg"
      android:text="Create 1-1"
      style="@style/MdText.Body1.SingleLine" />
  </LinearLayout>
</android.support.v7.widget.CardView>