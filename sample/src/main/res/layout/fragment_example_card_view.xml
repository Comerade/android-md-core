<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="?attr/mdColor_backgroundPalette_dark"
  tools:context=".MainActivity">

  <LinearLayout
    android:orientation="vertical"
    android:paddingBottom="?attr/mdList_spacing"
    style="@style/MdList">

    <LinearLayout
      android:orientation="vertical"
      style="@style/MdCardView.Small.Wrapper">

      <TextView
        android:text="CardView Small"
        style="@style/MdList.Subheader" />

      <android.support.v7.widget.CardView style="@style/MdCardView.Small">

        <include layout="@layout/item_card_view" />
      </android.support.v7.widget.CardView>

      <android.support.v7.widget.CardView style="@style/MdCardView.Small">

        <include layout="@layout/item_card_view" />
      </android.support.v7.widget.CardView>

      <android.support.v7.widget.CardView style="@style/MdCardView.Small">

        <include layout="@layout/item_card_view" />
      </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
      android:orientation="vertical"
      style="@style/MdCardView.Medium.Wrapper">

      <TextView
        android:text="CardView Medium"
        style="@style/MdList.Subheader" />

      <android.support.v7.widget.CardView style="@style/MdCardView.Medium">

        <include layout="@layout/item_card_view" />
      </android.support.v7.widget.CardView>

      <android.support.v7.widget.CardView style="@style/MdCardView.Medium">

        <include layout="@layout/item_card_view" />
      </android.support.v7.widget.CardView>

      <android.support.v7.widget.CardView style="@style/MdCardView.Medium">

        <include layout="@layout/item_card_view" />
      </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
      android:orientation="vertical"
      style="@style/MdCardView.Full.Wrapper">

      <TextView
        android:text="CardView Full"
        style="@style/MdList.Subheader" />

      <android.support.v7.widget.CardView style="@style/MdCardView.Full">

        <include layout="@layout/item_card_view" />
      </android.support.v7.widget.CardView>

      <android.support.v7.widget.CardView style="@style/MdCardView.Full">

        <include layout="@layout/item_card_view" />
      </android.support.v7.widget.CardView>

      <android.support.v7.widget.CardView style="@style/MdCardView.Full">

        <include layout="@layout/item_card_view" />
      </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
      android:orientation="vertical"
      style="@style/MdCardView.Full.Wrapper">

      <TextView
        android:text="CardView Full Light"
        style="@style/MdList.Subheader" />

      <android.support.v7.widget.CardView style="@style/MdCardView.Full.Small">

        <include layout="@layout/item_card_view" />
      </android.support.v7.widget.CardView>

      <android.support.v7.widget.CardView style="@style/MdCardView.Full.Small">

        <include layout="@layout/item_card_view" />
      </android.support.v7.widget.CardView>

      <android.support.v7.widget.CardView style="@style/MdCardView.Full.Small">

        <include layout="@layout/item_card_view" />
      </android.support.v7.widget.CardView>
    </LinearLayout>
  </LinearLayout>
</ScrollView>