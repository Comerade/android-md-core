<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  tools:context=".activity.ListsActivity"
  style="@style/MdList">

  <!-- ////////////////////////////////////////////////////////////////////////// -->
  <!-- SingleLine -->
  <!-- ////////////////////////////////////////////////////////////////////////// -->

  <LinearLayout style="@style/MdList">

    <TextView
      android:text="Single Line - Text Only"
      style="@style/MdSubHeader.List" />

    <me.henrytao.mdcore.widgets.MdListItem
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="?attr/selectableItemBackground"
      android:clickable="true"
      app:mdli_divider_layout="@layout/mdli_divider"
      app:mdli_title="Single-line item"
      app:mdli_type="single_line_text_only" />

    <RelativeLayout
      android:background="?attr/selectableItemBackground"
      android:clickable="true"
      style="@style/MdListItem.SingleLine.IconWithText">

      <ImageView
        android:src="?attr/ic_blank_circle"
        style="@style/Base.MdListItem.Icon" />

      <TextView
        android:text="@string/text_short"
        style="@style/Base.MdListItem.Title.Left" />
    </RelativeLayout>

    <RelativeLayout
      android:background="?attr/selectableItemBackground"
      android:clickable="true"
      style="@style/MdListItem.SingleLine.AvatarWithText">

      <ImageView
        android:src="?attr/ic_blank_circle"
        style="@style/Base.MdListItem.Avatar" />

      <TextView
        android:text="@string/text_short"
        style="@style/Base.MdListItem.Title.Left" />
    </RelativeLayout>


    <RelativeLayout
      android:background="?attr/selectableItemBackground"
      android:clickable="true"
      style="@style/MdListItem.SingleLine.AvatarWithTextAndIcon">

      <ImageView
        android:src="?attr/ic_blank_circle"
        style="@style/Base.MdListItem.Avatar" />

      <ImageView
        android:src="?attr/ic_blank_circle"
        style="@style/Base.MdListItem.Icon.Right" />

      <TextView
        android:text="@string/text_short"
        style="@style/Base.MdListItem.Title.LeftRight" />
    </RelativeLayout>

    <View style="@style/MdDivider" />
  </LinearLayout>

  <!-- ////////////////////////////////////////////////////////////////////////// -->
  <!-- TwoLine -->
  <!-- ////////////////////////////////////////////////////////////////////////// -->

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="visible">

    <RelativeLayout
      android:background="?attr/selectableItemBackground"
      android:clickable="true"
      style="@style/MdListItem.TwoLine.TextOnly">

      <LinearLayout style="@style/Base.MdListItem.Wrapper">

        <TextView
          android:text="@string/text_short"
          style="@style/Base.MdListItem.Title" />

        <TextView
          android:text="@string/text_short"
          style="@style/Base.MdListItem.Subtitle" />
      </LinearLayout>
    </RelativeLayout>

    <View style="@style/MdDivider" />

    <RelativeLayout
      android:background="?attr/selectableItemBackground"
      android:clickable="true"
      style="@style/MdListItem.TwoLine.IconWithText">

      <ImageView
        android:src="?attr/ic_blank_circle"
        style="@style/Base.MdListItem.Icon" />

      <LinearLayout style="@style/Base.MdListItem.Wrapper">

        <TextView
          android:text="@string/text_short"
          style="@style/Base.MdListItem.Title.Left" />

        <TextView
          android:text="@string/text_short"
          style="@style/Base.MdListItem.Subtitle.Left" />
      </LinearLayout>
    </RelativeLayout>

    <View style="@style/MdDivider" />

    <RelativeLayout
      android:background="?attr/selectableItemBackground"
      android:clickable="true"
      style="@style/MdListItem.TwoLine.AvatarWithText">

      <ImageView
        android:src="?attr/ic_blank_circle"
        style="@style/Base.MdListItem.Avatar" />

      <LinearLayout style="@style/Base.MdListItem.Wrapper">

        <TextView
          android:text="@string/text_short"
          style="@style/Base.MdListItem.Title.Left" />

        <TextView
          android:text="@string/text_short"
          style="@style/Base.MdListItem.Subtitle.Left" />
      </LinearLayout>
    </RelativeLayout>

    <View style="@style/MdDivider" />

    <RelativeLayout
      android:background="?attr/selectableItemBackground"
      android:clickable="true"
      style="@style/MdListItem.TwoLine.AvatarWithTextAndIcon">

      <ImageView
        android:src="?attr/ic_blank_circle"
        style="@style/Base.MdListItem.Avatar" />

      <ImageView
        android:src="?attr/ic_blank_circle"
        style="@style/Base.MdListItem.Icon.Right" />

      <LinearLayout style="@style/Base.MdListItem.Wrapper">

        <TextView
          android:text="@string/text_short"
          style="@style/Base.MdListItem.Title.LeftRight" />

        <TextView
          android:text="@string/text_short"
          style="@style/Base.MdListItem.Subtitle.LeftRight" />
      </LinearLayout>
    </RelativeLayout>

    <View style="@style/MdDivider" />
  </LinearLayout>

  <!-- ////////////////////////////////////////////////////////////////////////// -->
  <!-- ThreeLine -->
  <!-- ////////////////////////////////////////////////////////////////////////// -->

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="visible">

    <RelativeLayout
      android:background="?attr/selectableItemBackground"
      android:clickable="true"
      style="@style/MdListItem.ThreeLine.TextOnly">

      <LinearLayout style="@style/Base.MdListItem.Wrapper">

        <TextView
          android:text="@string/text_short"
          style="@style/Base.MdListItem.Title" />

        <TextView
          android:maxLines="2"
          android:singleLine="false"
          android:text="@string/text_short"
          style="@style/Base.MdListItem.Subtitle" />
      </LinearLayout>
    </RelativeLayout>

    <View style="@style/MdDivider" />

    <RelativeLayout
      android:background="?attr/selectableItemBackground"
      android:clickable="true"
      style="@style/MdListItem.ThreeLine.IconWithText">

      <ImageView
        android:src="?attr/ic_blank_circle"
        style="@style/Base.MdListItem.Icon.Top" />

      <LinearLayout style="@style/Base.MdListItem.Wrapper">

        <TextView
          android:text="@string/text_short"
          style="@style/Base.MdListItem.Title.Left" />

        <TextView
          android:maxLines="2"
          android:singleLine="false"
          android:text="@string/text_short"
          style="@style/Base.MdListItem.Subtitle.Left" />
      </LinearLayout>
    </RelativeLayout>

    <View style="@style/MdDivider" />

    <RelativeLayout
      android:background="?attr/selectableItemBackground"
      android:clickable="true"
      style="@style/MdListItem.ThreeLine.AvatarWithText">

      <ImageView
        android:src="?attr/ic_blank_circle"
        style="@style/Base.MdListItem.Avatar.Top" />

      <LinearLayout style="@style/Base.MdListItem.Wrapper">

        <TextView
          android:text="@string/text_short"
          style="@style/Base.MdListItem.Title.Left" />

        <TextView
          android:maxLines="2"
          android:singleLine="false"
          android:text="@string/text_short"
          style="@style/Base.MdListItem.Subtitle.Left" />
      </LinearLayout>
    </RelativeLayout>

    <View style="@style/MdDivider" />

    <RelativeLayout
      android:background="?attr/selectableItemBackground"
      android:clickable="true"
      style="@style/MdListItem.ThreeLine.AvatarWithTextAndIcon">

      <ImageView
        android:src="?attr/ic_blank_circle"
        style="@style/Base.MdListItem.Avatar.Top" />

      <ImageView
        android:src="?attr/ic_blank_circle"
        style="@style/Base.MdListItem.Icon.TopRight" />

      <LinearLayout style="@style/Base.MdListItem.Wrapper">

        <TextView
          android:text="@string/text_short"
          style="@style/Base.MdListItem.Title.LeftRight" />

        <TextView
          android:maxLines="2"
          android:singleLine="false"
          android:text="@string/text_short"
          style="@style/Base.MdListItem.Subtitle.LeftRight" />
      </LinearLayout>
    </RelativeLayout>

    <View style="@style/MdDivider" />
  </LinearLayout>
</LinearLayout>