<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <View style="@style/MdListSpacing" />

  <!-- ////////////////////////////////////////////////////////////////////////// -->
  <!-- Widget -->
  <!-- ////////////////////////////////////////////////////////////////////////// -->

  <me.henrytao.mdcore.widgets.MdListItem
    android:id="@+id/md_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/md_ripple"
    android:clickable="true"
    app:mdli_avatar="?attr/ic_blank_circle"
    app:mdli_icon="?attr/ic_blank_circle"
    app:mdli_subtitle="This is subtitle"
    app:mdli_title="Hello moto"
    app:mdli_type="two_line_avatar_with_text_and_icon" />

  <!-- ////////////////////////////////////////////////////////////////////////// -->
  <!-- SingleLine -->
  <!-- ////////////////////////////////////////////////////////////////////////// -->

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="gone">

    <RelativeLayout
      android:background="@drawable/md_ripple"
      android:clickable="true"
      style="@style/MdListItem.SingleLine.TextOnly">

      <TextView
        android:text="@string/text_short"
        style="@style/Base.MdListItem.Title" />
    </RelativeLayout>

    <View style="@style/MdDivider.AlignParentBottom" />

    <RelativeLayout
      android:background="@drawable/md_ripple"
      android:clickable="true"
      style="@style/MdListItem.SingleLine.IconWithText">

      <ImageView
        android:src="?attr/ic_blank_circle"
        style="@style/Base.MdListItem.Icon" />

      <TextView
        android:text="@string/text_short"
        style="@style/Base.MdListItem.Title.Left" />
    </RelativeLayout>

    <View style="@style/MdDivider.AlignParentBottom" />

    <RelativeLayout
      android:background="@drawable/md_ripple"
      android:clickable="true"
      style="@style/MdListItem.SingleLine.AvatarWithText">

      <ImageView
        android:src="?attr/ic_blank_circle"
        style="@style/Base.MdListItem.Avatar" />

      <TextView
        android:text="@string/text_short"
        style="@style/Base.MdListItem.Title.Left" />
    </RelativeLayout>

    <View style="@style/MdDivider.AlignParentBottom" />

    <RelativeLayout
      android:background="@drawable/md_ripple"
      android:clickable="true"
      style="@style/MdListItem.SingleLine.AvatarWithTextAndIcon">

      <ImageView
        android:src="?attr/ic_blank_circle"
        style="@style/Base.MdListItem.Avatar" />

      <ImageView
        android:src="?attr/ic_blank_circle"
        style="@style/Base.MdListItem.Icon.Right" />

      <TextView
        android:text="@string/text_short"
        style="@style/Base.MdListItem.Title.LeftRight" />
    </RelativeLayout>

    <View style="@style/MdDivider" />
  </LinearLayout>

  <!-- ////////////////////////////////////////////////////////////////////////// -->
  <!-- TwoLine -->
  <!-- ////////////////////////////////////////////////////////////////////////// -->

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="gone">

    <RelativeLayout
      android:background="@drawable/md_ripple"
      android:clickable="true"
      style="@style/MdListItem.TwoLine.TextOnly">

      <LinearLayout style="@style/Base.MdListItem.Wrapper">

        <TextView
          android:text="@string/text_short"
          style="@style/Base.MdListItem.Title" />

        <TextView
          android:text="@string/text_short"
          style="@style/Base.MdListItem.Subtitle" />
      </LinearLayout>
    </RelativeLayout>

    <View style="@style/MdDivider" />

    <RelativeLayout
      android:background="@drawable/md_ripple"
      android:clickable="true"
      style="@style/MdListItem.TwoLine.IconWithText">

      <ImageView
        android:src="?attr/ic_blank_circle"
        style="@style/Base.MdListItem.Icon" />

      <LinearLayout style="@style/Base.MdListItem.Wrapper">

        <TextView
          android:text="@string/text_short"
          style="@style/Base.MdListItem.Title.Left" />

        <TextView
          android:text="@string/text_short"
          style="@style/Base.MdListItem.Subtitle.Left" />
      </LinearLayout>
    </RelativeLayout>

    <View style="@style/MdDivider" />

    <RelativeLayout
      android:background="@drawable/md_ripple"
      android:clickable="true"
      style="@style/MdListItem.TwoLine.AvatarWithText">

      <ImageView
        android:src="?attr/ic_blank_circle"
        style="@style/Base.MdListItem.Avatar" />

      <LinearLayout style="@style/Base.MdListItem.Wrapper">

        <TextView
          android:text="@string/text_short"
          style="@style/Base.MdListItem.Title.Left" />

        <TextView
          android:text="@string/text_short"
          style="@style/Base.MdListItem.Subtitle.Left" />
      </LinearLayout>
    </RelativeLayout>

    <View style="@style/MdDivider" />

    <RelativeLayout
      android:background="@drawable/md_ripple"
      android:clickable="true"
      style="@style/MdListItem.TwoLine.AvatarWithTextAndIcon">

      <ImageView
        android:src="?attr/ic_blank_circle"
        style="@style/Base.MdListItem.Avatar" />

      <ImageView
        android:src="?attr/ic_blank_circle"
        style="@style/Base.MdListItem.Icon.Right" />

      <LinearLayout style="@style/Base.MdListItem.Wrapper">

        <TextView
          android:text="@string/text_short"
          style="@style/Base.MdListItem.Title.LeftRight" />

        <TextView
          android:text="@string/text_short"
          style="@style/Base.MdListItem.Subtitle.LeftRight" />
      </LinearLayout>
    </RelativeLayout>

    <View style="@style/MdDivider" />
  </LinearLayout>

  <!-- ////////////////////////////////////////////////////////////////////////// -->
  <!-- ThreeLine -->
  <!-- ////////////////////////////////////////////////////////////////////////// -->

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="gone">

    <RelativeLayout
      android:background="@drawable/md_ripple"
      android:clickable="true"
      style="@style/MdListItem.ThreeLine.TextOnly">

      <LinearLayout style="@style/Base.MdListItem.Wrapper">

        <TextView
          android:text="@string/text_short"
          style="@style/Base.MdListItem.Title" />

        <TextView
          android:maxLines="2"
          android:singleLine="false"
          android:text="@string/text_short"
          style="@style/Base.MdListItem.Subtitle" />
      </LinearLayout>
    </RelativeLayout>

    <View style="@style/MdDivider" />

    <RelativeLayout
      android:background="@drawable/md_ripple"
      android:clickable="true"
      style="@style/MdListItem.ThreeLine.IconWithText">

      <ImageView
        android:src="?attr/ic_blank_circle"
        style="@style/Base.MdListItem.Icon.Top" />

      <LinearLayout style="@style/Base.MdListItem.Wrapper">

        <TextView
          android:text="@string/text_short"
          style="@style/Base.MdListItem.Title.Left" />

        <TextView
          android:maxLines="2"
          android:singleLine="false"
          android:text="@string/text_short"
          style="@style/Base.MdListItem.Subtitle.Left" />
      </LinearLayout>
    </RelativeLayout>

    <View style="@style/MdDivider" />

    <RelativeLayout
      android:background="@drawable/md_ripple"
      android:clickable="true"
      style="@style/MdListItem.ThreeLine.AvatarWithText">

      <ImageView
        android:src="?attr/ic_blank_circle"
        style="@style/Base.MdListItem.Avatar.Top" />

      <LinearLayout style="@style/Base.MdListItem.Wrapper">

        <TextView
          android:text="@string/text_short"
          style="@style/Base.MdListItem.Title.Left" />

        <TextView
          android:maxLines="2"
          android:singleLine="false"
          android:text="@string/text_short"
          style="@style/Base.MdListItem.Subtitle.Left" />
      </LinearLayout>
    </RelativeLayout>

    <View style="@style/MdDivider" />

    <RelativeLayout
      android:background="@drawable/md_ripple"
      android:clickable="true"
      style="@style/MdListItem.ThreeLine.AvatarWithTextAndIcon">

      <ImageView
        android:src="?attr/ic_blank_circle"
        style="@style/Base.MdListItem.Avatar.Top" />

      <ImageView
        android:src="?attr/ic_blank_circle"
        style="@style/Base.MdListItem.Icon.TopRight" />

      <LinearLayout style="@style/Base.MdListItem.Wrapper">

        <TextView
          android:text="@string/text_short"
          style="@style/Base.MdListItem.Title.LeftRight" />

        <TextView
          android:maxLines="2"
          android:singleLine="false"
          android:text="@string/text_short"
          style="@style/Base.MdListItem.Subtitle.LeftRight" />
      </LinearLayout>
    </RelativeLayout>

    <View style="@style/MdDivider" />
  </LinearLayout>
</LinearLayout>