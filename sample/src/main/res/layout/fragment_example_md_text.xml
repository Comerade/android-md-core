<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:scrollbars="vertical"
  tools:context="me.henrytao.mddemo.fragment.ExampleMdTextFragment">

  <LinearLayout
    android:orientation="vertical"
    android:paddingLeft="?attr/mdLayout_spacing_md"
    android:paddingRight="?attr/mdLayout_spacing_md"
    style="@style/MdList">

    <View style="@style/MdList.Spacing" />

    <TextView
      android:text="@string/typo_button"
      style="@style/MdText.Button" />

    <TextView
      android:text="@string/typo_caption"
      style="@style/MdText.Caption" />

    <TextView
      android:text="@string/typo_body_1"
      style="@style/MdText.Body1" />

    <TextView
      android:text="@string/typo_body_2"
      style="@style/MdText.Body2" />

    <TextView
      android:text="@string/typo_subhead"
      style="@style/MdText.Subhead" />

    <TextView
      android:text="@string/typo_subhead_1"
      style="@style/MdText.Subhead1" />

    <TextView
      android:text="@string/typo_subhead_2"
      style="@style/MdText.Subhead2" />

    <TextView
      android:text="@string/typo_title"
      style="@style/MdText.Title" />

    <TextView
      android:text="@string/typo_headline"
      style="@style/MdText.Headline" />

    <TextView
      android:text="@string/typo_display_1"
      style="@style/MdText.Display1" />

    <TextView
      android:text="@string/typo_display_2"
      style="@style/MdText.Display2" />

    <TextView
      android:text="@string/typo_display_3"
      style="@style/MdText.Display3" />

    <TextView
      android:text="@string/typo_display_4"
      style="@style/MdText.Display4" />

    <View style="@style/MdList.Spacing" />
  </LinearLayout>
</ScrollView>
