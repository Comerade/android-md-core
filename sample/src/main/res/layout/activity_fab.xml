<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  tools:context=".activity.FabActivity"
  style="@style/MdList">

  <!-- ////////////////////////////////////////////////////////////////////////// -->
  <!-- Button -->
  <!-- ////////////////////////////////////////////////////////////////////////// -->

  <LinearLayout style="@style/MdList">

    <TextView
      android:text="Button types"
      style="@style/MdSubHeader.List" />

    <LinearLayout style="@style/AppStyle.Grid">

      <RelativeLayout style="@style/AppStyle.Grid.Item">

        <me.henrytao.mdcore.widgets.MdFloatingActionButton
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="@dimen/mdLayoutSpacing"
          android:clickable="true"
          android:src="@drawable/ic_add_white"
          app:fabSize="normal" />
      </RelativeLayout>

      <RelativeLayout style="@style/AppStyle.Grid.Item">

        <android.support.design.widget.FloatingActionButton
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="@dimen/mdLayoutSpacing"
          android:clickable="true"
          android:src="@drawable/ic_add_white"
          app:fabSize="mini" />
      </RelativeLayout>

      <RelativeLayout style="@style/AppStyle.Grid.Item" />

      <RelativeLayout style="@style/AppStyle.Grid.Item" />
    </LinearLayout>
  </LinearLayout>
</LinearLayout>