        android:id="@+id/icon2"
        android:background="@drawable/ic_blank"
        android:src="@drawable/ic_blank"
        style="@style/MdList.TwoLine.AvatarIconWithText.Icon" />
      <TextView
        android:text="Two-line item"
        style="@style/MdList.TwoLine.AvatarIconWithText.Text.First" />
      <TextView
        android:text="Secondary text"
        style="@style/MdList.TwoLine.AvatarIconWithText.Text.Second" />
      <View style="@style/MdDivider.AlignParentBottom" />
    </RelativeLayout>


    <RelativeLayout
      android:background="@drawable/md_ripple"
      android:clickable="true"
