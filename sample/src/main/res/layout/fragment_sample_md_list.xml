        style="@style/MdList.ThreeLine.IconWithText.Text.Third" />
      <View style="@style/MdDivider.AlignParentBottom" />
    </RelativeLayout>


    <RelativeLayout
      android:background="@drawable/md_ripple"
      android:clickable="true"
      style="@style/MdList.ThreeLine.AvatarIconWithText">
      <ImageView
        android:src="@drawable/ic_blank"
        style="@style/MdList.ThreeLine.AvatarIconWithText.Avatar" />
      <ImageView
        android:id="@+id/icon3"
        android:background="@drawable/ic_blank"
        android:src="@drawable/ic_blank"
        style="@style/MdList.ThreeLine.AvatarIconWithText.Icon" />
      <TextView
        android:text="Three-line item"
        style="@style/MdList.ThreeLine.AvatarIconWithText.Text.First" />
