      <View style="@style/MdDivider.AlignParentBottom" />
    </RelativeLayout>


    <RelativeLayout
      android:background="@drawable/md_ripple"
      android:clickable="true"
      style="@style/MdList.SingleLine.AvatarWithText">
      <ImageView
        android:src="@drawable/ic_blank"
        style="@style/MdList.SingleLine.AvatarWithText.Avatar" />
      <TextView
        android:text="@string/text_title"
        style="@style/MdList.SingleLine.AvatarWithText.Text" />
      <View style="@style/MdDivider.AlignParentBottom" />
    </RelativeLayout>


    <RelativeLayout
      android:background="@drawable/md_ripple"
      android:clickable="true"
      style="@style/MdList.SingleLine.AvatarWithText">
