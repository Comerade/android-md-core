      <ImageView
        android:src="@drawable/ic_blank"
        style="@style/MdList.ThreeLine.IconWithText.Icon" />
      <TextView
        android:text="Three-line item"
        style="@style/MdList.ThreeLine.IconWithText.Text.First" />
      <TextView
        android:text="Secondary text secondary text secondary text secondary text secondary text secondary text secondary textsecondary text  textsecondary text textsecondary text textsecondary text "
