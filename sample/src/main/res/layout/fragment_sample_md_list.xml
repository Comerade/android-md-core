    <RelativeLayout
      android:background="@drawable/md_ripple"
      android:clickable="true"
      style="@style/MdList.TwoLine.AvatarIconWithText">
      <ImageView
        android:src="@drawable/ic_blank"
        style="@style/MdList.TwoLine.AvatarIconWithText.Avatar" />
