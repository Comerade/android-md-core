<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  tools:context=".activity.TextFieldActivity"
  style="@style/MdList">

  <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mdColor_blue">

    <android.support.design.widget.TextInputLayout style="@style/MdTextField.FloatingLabel">

      <EditText
        android:hint="Input hint text"
        android:text="Input text"
        style="@style/MdTextField.FloatingLabel.EditText" />
    </android.support.design.widget.TextInputLayout>
  </FrameLayout>

  <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mdColor_yellow">

    <android.support.design.widget.TextInputLayout style="@style/MdTextField.FloatingLabel">

      <EditText
        android:hint="Input hint text"
        android:text="Input text"
        style="@style/MdTextField.FloatingLabel.EditText" />
    </android.support.design.widget.TextInputLayout>
  </FrameLayout>

  <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mdColor_green">

    <EditText
      android:hint="Input hint text"
      style="@style/MdTextField.EditText" />
  </FrameLayout>

  <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mdColor_orange">

    <LinearLayout style="@style/MdTextField.TextWithIcon">

      <me.henrytao.mdcore.widgets.MdIcon
        android:src="@drawable/ic_phone"
        style="@style/MdTextField.TextWithIcon.Icon" />

      <EditText
        android:hint="Input hint text"
        style="@style/MdTextField.EditText" />
    </LinearLayout>
  </FrameLayout>

  <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mdColor_yellow">

    <EditText
      android:hint="Input hint text"
      style="@style/MdTextField.EditText" />
  </FrameLayout>

  <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mdColor_blueGrey_light">

    <EditText
      android:hint="Input hint text"
      style="@style/MdTextField.EditText.FullWidth" />
  </FrameLayout>

  <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mdColor_blue">

    <android.support.design.widget.TextInputLayout
      app:counterEnabled="true"
      app:counterMaxLength="20"
      style="@style/MdTextField.FloatingLabel">

      <EditText
        android:hint="Input hint text"
        android:text="Input text"
        style="@style/MdTextField.FloatingLabel.EditText" />
    </android.support.design.widget.TextInputLayout>
  </FrameLayout>

  <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mdColor_yellow">

    <android.support.design.widget.TextInputLayout style="@style/MdTextField.FullTextWithCounter">

      <EditText
        android:hint="Input hint text"
        android:text="Input text"
        style="@style/MdTextField.FullTextWithCounter.EditText" />
    </android.support.design.widget.TextInputLayout>
  </FrameLayout>
</LinearLayout>