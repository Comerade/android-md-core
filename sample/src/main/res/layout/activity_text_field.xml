<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:paddingBottom="@dimen/mdLayoutSpacing_lg"
  tools:context=".activity.TextFieldActivity"
  style="@style/MdList">

  <android.support.design.widget.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="Sample" />
  </android.support.design.widget.TextInputLayout>

  <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@color/mdColor_red">

    <android.support.design.widget.TextInputLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginRight="16dp"
      android:background="@color/mdColor_green"
      android:paddingTop="14dp">

      <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/md_edit_text_background"
        android:layout_marginRight="32dp"
        android:paddingBottom="16dp"
        android:hint="Label text"
        android:text="Input text" />
    </android.support.design.widget.TextInputLayout>
  </FrameLayout>
</LinearLayout>