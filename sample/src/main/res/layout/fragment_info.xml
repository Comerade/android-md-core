<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:scrollbars="vertical"
  tools:context="me.henrytao.mddemo.fragment.InfoFragment"
  style="@style/MdList">

  <LinearLayout
    android:gravity="center"
    android:paddingLeft="?attr/mdLayout_spacing_md"
    android:paddingRight="?attr/mdLayout_spacing_md"
    style="@style/MdList.Wrapper">

    <TextView
      android:layout_marginBottom="?attr/mdLayout_spacing_sm"
      android:text="MdCore"
      style="@style/MdText.Headline" />

    <TextView
      android:layout_marginBottom="?attr/mdLayout_spacing_sm"
      android:gravity="center"
      android:text="Demo app for android-md-core - Unify theme system for material apps"
      style="@style/MdText.Body1" />

    <ImageView
      android:layout_width="?attr/mdIcon_xlg"
      android:layout_height="?attr/mdIcon_xlg"
      android:layout_marginBottom="?attr/mdLayout_spacing_md"
      android:src="@drawable/ic_logo" />

    <TextView
      android:layout_marginBottom="?attr/mdLayout_spacing_sm"
      android:gravity="center"
      android:text="Â© 2015 Henry Tao All rights reserved"
      style="@style/MdText.Body1" />

    <View
      android:layout_width="match_parent"
      android:layout_height="?attr/mdLayout_spacing_xlg" />

    <TextView
      android:layout_marginBottom="?attr/mdLayout_spacing_sm"
      android:gravity="center"
      android:text="Fork me on GitHub!"
      style="@style/MdText.Body1" />

    <TextView
      android:layout_marginBottom="?attr/mdLayout_spacing_sm"
      android:autoLink="web"
      android:gravity="center"
      android:text="https://github.com/henrytao-me/android-md-core"
      style="@style/MdText.Body1" />

    <View
      android:layout_marginBottom="?attr/mdLayout_spacing_sm"
      style="@style/MdDivider" />

    <TextView
      android:layout_marginBottom="?attr/mdLayout_spacing_sm"
      android:text="License"
      style="@style/MdText.Headline" />

    <TextView
      android:layout_marginBottom="?attr/mdLayout_spacing_sm"
      android:text="@string/license"
      style="@style/MdText.Body1" />

  </LinearLayout>
</ScrollView>
