<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/container"
  tools:context=".activity.DrawerLayout"
  style="@style/MdDrawerLayout">

  <RelativeLayout
    android:id="@+id/content"
    style="@style/MdDrawerLayout.Content">

    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="?attr/mdColor_backgroundPalette">

      <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        app:navigationIcon="@drawable/ic_toolbar_menu"
        style="@style/MdToolbar" />

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:layout_centerVertical="true"
          android:text="@string/text_put_your_content_here" />
      </RelativeLayout>

    </RelativeLayout>

  </RelativeLayout>

  <RelativeLayout
    android:id="@+id/navigation"
    android:background="?attr/mdColor_backgroundPalette"
    style="@style/MdDrawerLayout.Navigation">

    <TextView
      android:id="@+id/sample2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_centerVertical="true"
      android:text="@string/text_put_your_content_here" />

  </RelativeLayout>

  <RelativeLayout
    android:id="@+id/navigation_right"
    android:background="?attr/mdColor_backgroundPalette"
    style="@style/MdDrawerLayout.Navigation.Right">

    <TextView
      android:id="@+id/sample3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_centerVertical="true"
      android:text="@string/text_put_your_content_here" />

  </RelativeLayout>

</android.support.v4.widget.DrawerLayout>
