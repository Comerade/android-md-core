<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:scrollbars="vertical"
  tools:context="me.henrytao.mddemo.fragment.ExampleMdButtonFragment">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <!-- Raised Butotn -->

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:orientation="vertical"
      android:gravity="top|center_horizontal"
      android:padding="?attr/mdLayout_spacing">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/mdLayout_spacing"
        android:text="Raised Button" />

      <Button
        android:layout_marginTop="?attr/mdLayout_spacing"
        android:text="Button"
        style="@style/MdButton.Primary" />

      <Button
        android:layout_marginTop="?attr/mdLayout_spacing"
        android:text="Button"
        style="@style/MdButton.Accent" />

      <Button
        android:layout_marginTop="?attr/mdLayout_spacing"
        android:text="Button"
        style="@style/MdButton.Warn" />

      <Button
        android:layout_marginTop="?attr/mdLayout_spacing"
        android:text="Button"
        style="@style/MdButton.Background" />

      <Button
        android:layout_marginTop="?attr/mdLayout_spacing"
        android:text="Button"
        style="@style/MdButton.BackgroundDark" />

    </LinearLayout>

    <!-- Flat Button -->

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:orientation="vertical"
      android:gravity="top|center_horizontal"
      android:padding="?attr/mdLayout_spacing">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/mdLayout_spacing"
        android:text="Flat Button" />

      <Button
        android:layout_marginTop="?attr/mdLayout_spacing"
        android:text="Button"
        style="@style/MdButton.Primary.Flat" />

      <Button
        android:layout_marginTop="?attr/mdLayout_spacing"
        android:text="Button"
        style="@style/MdButton.Accent.Flat" />

      <Button
        android:layout_marginTop="?attr/mdLayout_spacing"
        android:text="Button"
        style="@style/MdButton.Warn.Flat" />

      <Button
        android:layout_marginTop="?attr/mdLayout_spacing"
        android:text="Button"
        style="@style/MdButton.Background.Flat" />

      <Button
        android:layout_marginTop="?attr/mdLayout_spacing"
        android:text="Button"
        style="@style/MdButton.BackgroundDark.Flat" />

    </LinearLayout>

  </LinearLayout>

</ScrollView>
