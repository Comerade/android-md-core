<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:paddingBottom="@dimen/mdLayoutSpacing_lg"
  tools:context=".activity.IconActivity"
  style="@style/MdList">

  <!-- ////////////////////////////////////////////////////////////////////////// -->
  <!-- Icon Toggle -->
  <!-- ////////////////////////////////////////////////////////////////////////// -->

  <LinearLayout style="@style/MdList">

    <TextView
      android:text="Icon toggle"
      style="@style/MdSubHeader.List" />

    <LinearLayout style="@style/AppStyle.Grid">

      <RelativeLayout style="@style/AppStyle.Grid.Item">

        <me.henrytao.mdcore.widgets.MdIconToggle
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:button="@drawable/ic_menu_favorite" />
      </RelativeLayout>

      <RelativeLayout style="@style/AppStyle.Grid.Item">

        <me.henrytao.mdcore.widgets.MdIconToggle
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:button="@drawable/ic_menu_favorite"
          android:enabled="false" />
      </RelativeLayout>

      <RelativeLayout style="@style/AppStyle.Grid.Item">

        <me.henrytao.mdcore.widgets.MdIconToggle
          android:id="@+id/toggle_up"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:button="@drawable/ic_menu_favorite" />
      </RelativeLayout>

      <RelativeLayout style="@style/AppStyle.Grid.Item">

        <me.henrytao.mdcore.widgets.MdIconToggle
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:button="@drawable/ic_menu_favorite"
          android:enabled="false"
          android:text="10" />
      </RelativeLayout>
    </LinearLayout>
  </LinearLayout>

  <!-- ////////////////////////////////////////////////////////////////////////// -->
  <!-- Icon -->
  <!-- ////////////////////////////////////////////////////////////////////////// -->

  <LinearLayout style="@style/MdList">

    <TextView
      android:text="Icon"
      style="@style/MdSubHeader.List" />

    <LinearLayout style="@style/AppStyle.Grid">

      <RelativeLayout style="@style/AppStyle.Grid.Item">

        <me.henrytao.mdcore.widgets.MdIcon
          android:layout_width="@dimen/mdIconSize"
          android:layout_height="@dimen/mdIconSize"
          android:src="@drawable/ic_android" />
      </RelativeLayout>

      <RelativeLayout style="@style/AppStyle.Grid.Item">

        <me.henrytao.mdcore.widgets.MdIcon
          android:layout_width="@dimen/mdIconSize"
          android:layout_height="@dimen/mdIconSize"
          android:src="@drawable/ic_android"
          app:enabled="false" />
      </RelativeLayout>

      <RelativeLayout
        android:background="@color/mdColor_white"
        style="@style/AppStyle.Grid.Item">

        <me.henrytao.mdcore.widgets.MdIcon
          android:layout_width="@dimen/mdIconSize"
          android:layout_height="@dimen/mdIconSize"
          android:src="@drawable/ic_android"
          app:tint="@color/md_icon_color_light" />
      </RelativeLayout>

      <RelativeLayout
        android:background="@color/mdColor_white"
        style="@style/AppStyle.Grid.Item">

        <me.henrytao.mdcore.widgets.MdIcon
          android:layout_width="@dimen/mdIconSize"
          android:layout_height="@dimen/mdIconSize"
          android:src="@drawable/ic_android"
          app:enabled="false"
          app:tint="@color/md_icon_color_light" />
      </RelativeLayout>

      <RelativeLayout
        android:background="@color/mdColor_pink"
        style="@style/AppStyle.Grid.Item">

        <me.henrytao.mdcore.widgets.MdIcon
          android:layout_width="@dimen/mdIconSize"
          android:layout_height="@dimen/mdIconSize"
          android:src="@drawable/ic_android"
          app:tint="@color/md_icon_color_dark" />
      </RelativeLayout>

      <RelativeLayout
        android:background="@color/mdColor_pink"
        style="@style/AppStyle.Grid.Item">

        <me.henrytao.mdcore.widgets.MdIcon
          android:layout_width="@dimen/mdIconSize"
          android:layout_height="@dimen/mdIconSize"
          android:src="@drawable/ic_android"
          app:enabled="false"
          app:tint="@color/md_icon_color_dark" />
      </RelativeLayout>
    </LinearLayout>
  </LinearLayout>
</LinearLayout>
