<resources>

  <!-- ////////////////////////////////////////////////////////////////////////// -->
  <!-- List -->
  <!-- ////////////////////////////////////////////////////////////////////////// -->

  <style name="MdSubHeader.List" parent="Base.MdSubHeader" />

  <style name="MdSubHeader.List.Left" parent="Base.MdSubHeader.Left" />

  <style name="MdSubHeader.List.Right" parent="Base.MdSubHeader.Right" />

  <style name="MdSubHeader.List.RightLarge" parent="Base.MdSubHeader.RightLarge" />

  <style name="MdSubHeader.List.LeftRight" parent="Base.MdSubHeader.LeftRight" />

  <style name="MdSubHeader.List.LeftRightLarge" parent="Base.MdSubHeader.LeftRightLarge" />

  <!-- ////////////////////////////////////////////////////////////////////////// -->
  <!-- Grid -->
  <!-- ////////////////////////////////////////////////////////////////////////// -->

  <style name="MdSubHeader.Grid" parent="Base.MdSubHeader" />

  <!-- ////////////////////////////////////////////////////////////////////////// -->
  <!-- Menu -->
  <!-- ////////////////////////////////////////////////////////////////////////// -->

  <style name="MdSubHeader.Menu" parent="Base.MdSubHeader" />

  <!-- ////////////////////////////////////////////////////////////////////////// -->
  <!-- Base -->
  <!-- ////////////////////////////////////////////////////////////////////////// -->

  <style name="Base.MdSubHeader" parent="MdText.Body2.SingleLine">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">@dimen/mdListItemHeight_sm</item>
    <item name="android:textColor">?attr/mdTextColorSecondary_backgroundPalette</item>
    <item name="android:gravity">left|center_vertical</item>
    <item name="android:paddingLeft">@dimen/mdListItemPaddingLeft</item>
    <item name="android:paddingRight">@dimen/mdListItemPaddingRight</item>
  </style>

  <style name="Base.MdSubHeader.Left">
    <item name="android:paddingLeft">@dimen/mdListItemPaddingLeft_lg</item>
  </style>

  <style name="Base.MdSubHeader.Right">
    <item name="android:paddingRight">@dimen/mdListItemPaddingRight_lg</item>
  </style>

  <style name="Base.MdSubHeader.RightLarge">
    <item name="android:paddingRight">@dimen/mdListItemPaddingRight_xlg</item>
  </style>

  <style name="Base.MdSubHeader.LeftRight" parent="Base.MdSubHeader.Left">
    <item name="android:paddingRight">@dimen/mdListItemPaddingRight_lg</item>
  </style>

  <style name="Base.MdSubHeader.LeftRightLarge" parent="Base.MdSubHeader.Left">
    <item name="android:paddingRight">@dimen/mdListItemPaddingRight_xlg</item>
  </style>
</resources>