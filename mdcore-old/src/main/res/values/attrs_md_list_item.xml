<resources>

  <attr name="MdListItemSingleLineTextOnlyStyle" format="reference" />
  <attr name="MdListItemSingleLineIconWithTextStyle" format="reference" />
  <attr name="MdListItemSingleLineAvatarWithTextStyle" format="reference" />
  <attr name="MdListItemSingleLineAvatarWithTextAndIconStyle" format="reference" />
  <attr name="MdListItemTwoLineTextOnlyStyle" format="reference" />
  <attr name="MdListItemTwoLineIconWithTextStyle" format="reference" />
  <attr name="MdListItemTwoLineAvatarWithTextStyle" format="reference" />
  <attr name="MdListItemTwoLineAvatarWithTextAndIconStyle" format="reference" />
  <attr name="MdListItemThreeLineTextOnlyStyle" format="reference" />
  <attr name="MdListItemThreeLineIconWithTextStyle" format="reference" />
  <attr name="MdListItemThreeLineAvatarWithTextStyle" format="reference" />
  <attr name="MdListItemThreeLineAvatarWithTextAndIconStyle" format="reference" />

  <declare-styleable name="MdListItem">
    <attr name="mdli_divider_layout" format="reference" />
    <attr name="mdli_title" format="string|reference" />
    <attr name="mdli_subtitle" format="string|reference" />
    <attr name="mdli_avatar" format="reference" />
    <attr name="mdli_icon" format="reference" />
    <attr name="mdli_icon_tintMode" format="integer">
      <enum name="clear" value="0" />
      <enum name="src" value="1" />
      <enum name="dst" value="2" />
      <enum name="src_over" value="3" />
      <enum name="dst_over" value="4" />
      <enum name="src_in" value="5" />
      <enum name="dst_in" value="6" />
      <enum name="src_out" value="7" />
      <enum name="dst_out" value="8" />
      <enum name="src_atop" value="9" />
      <enum name="dst_atop" value="10" />
      <enum name="xor" value="11" />
      <enum name="darken" value="16" />
      <enum name="lighten" value="17" />
      <enum name="multiply" value="13" />
      <enum name="screen" value="14" />
      <enum name="add" value="12" />
      <enum name="overlay" value="15" />
    </attr>
    <attr name="mdli_type" format="integer">
      <enum name="single_line_text_only" value="11" />
      <enum name="single_line_icon_with_text" value="12" />
      <enum name="single_line_avatar_with_text" value="13" />
      <enum name="single_line_avatar_with_text_and_icon" value="14" />

      <enum name="two_line_text_only" value="21" />
      <enum name="two_line_icon_with_text" value="22" />
      <enum name="two_line_avatar_with_text" value="23" />
      <enum name="two_line_avatar_with_text_and_icon" value="24" />

      <enum name="three_line_text_only" value="31" />
      <enum name="three_line_icon_with_text" value="32" />
      <enum name="three_line_avatar_with_text" value="33" />
      <enum name="three_line_avatar_with_text_and_icon" value="34" />
    </attr>
  </declare-styleable>
</resources>