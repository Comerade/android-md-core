<resources>

  <style name="MdList">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <!-- SingleLine.TextOnly -->

  <style name="MdList.SingleLine.TextOnly" parent="">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">48dp</item>
  </style>

  <style name="MdList.SingleLine.TextOnly.Text" parent="MdText.Primary.SingleLine">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:paddingLeft">?attr/mdLayout_spacing</item>
    <item name="android:paddingRight">?attr/mdLayout_spacing</item>
    <item name="android:gravity">left|center_vertical</item>
  </style>

  <!-- SingleLine.IconWithText -->

  <style name="MdList.SingleLine.IconWithText" parent="MdList.SingleLine.TextOnly"></style>

  <style name="MdList.SingleLine.IconWithText.Icon" parent="">
    <item name="android:scaleType">fitCenter</item>
    <item name="android:layout_width">24dp</item>
    <item name="android:layout_height">24dp</item>
    <item name="android:layout_centerVertical">true</item>
    <item name="android:layout_marginLeft">?attr/mdLayout_spacing</item>
  </style>

  <style name="MdList.SingleLine.IconWithText.Text" parent="MdList.SingleLine.TextOnly.Text">
    <item name="android:paddingLeft">?attr/mdLayout_contentAssociatedWithIconOrAvatarLeftMargin</item>
  </style>

  <!-- SingleLine.AvatarWithText -->

  <style name="MdList.SingleLine.AvatarWithText" parent="MdList.SingleLine.IconWithText">
    <item name="android:layout_height">56dp</item>
  </style>

  <style name="MdList.SingleLine.AvatarWithText.Avatar" parent="MdList.SingleLine.IconWithText.Icon">
    <item name="android:layout_width">40dp</item>
    <item name="android:layout_height">40dp</item>
  </style>

  <style name="MdList.SingleLine.AvatarWithText.Text" parent="MdList.SingleLine.IconWithText.Text"></style>

  <style name="MdList.SingleLine.AvatarWithText.Icon" parent="MdList.SingleLine.IconWithText.Icon">
    <item name="android:layout_marginLeft">0dp</item>
    <item name="android:layout_marginRight">?attr/mdLayout_spacing</item>
    <item name="android:layout_alignParentRight">true</item>
  </style>

  <!-- TwoLine.TextOnly -->

  <style name="MdList.TwoLine.TextOnly" parent="">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">72dp</item>
  </style>

  <style name="MdList.TwoLine.TextOnly.Text.First" parent="MdText.Primary.SingleLine">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">36dp</item>
    <item name="android:layout_alignParentTop">true</item>
    <item name="android:paddingLeft">?attr/mdLayout_spacing</item>
    <item name="android:paddingRight">?attr/mdLayout_spacing</item>
    <item name="android:paddingBottom">2dp</item>
    <item name="android:gravity">left|bottom</item>
  </style>

  <style name="MdList.TwoLine.TextOnly.Text.Second" parent="MdText.Secondary.SingleLine">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">36dp</item>
    <item name="android:layout_alignParentBottom">true</item>
    <item name="android:paddingLeft">?attr/mdLayout_spacing</item>
    <item name="android:paddingRight">?attr/mdLayout_spacing</item>
    <item name="android:paddingTop">2dp</item>
    <item name="android:gravity">left|top</item>
    <item name="android:textColor">?attr/mdSecondaryTextColor_backgroundPalette</item>
  </style>

  <!-- TwoLine.IconWithText -->

  <style name="MdList.TwoLine.IconWithText" parent="">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">72dp</item>
  </style>

  <style name="MdList.TwoLine.IconWithText.Icon" parent="MdList.SingleLine.IconWithText.Icon"></style>

  <style name="MdList.TwoLine.IconWithText.Text.First" parent="MdList.TwoLine.TextOnly.Text.First">
    <item name="android:paddingLeft">?attr/mdLayout_contentAssociatedWithIconOrAvatarLeftMargin</item>
  </style>

  <style name="MdList.TwoLine.IconWithText.Text.Second" parent="MdList.TwoLine.TextOnly.Text.Second">
    <item name="android:paddingLeft">?attr/mdLayout_contentAssociatedWithIconOrAvatarLeftMargin</item>
  </style>

  <!-- TwoLine.AvatarWithText -->

  <style name="MdList.TwoLine.AvatarWithText" parent="">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">72dp</item>
  </style>

  <style name="MdList.TwoLine.AvatarWithText.Avatar" parent="MdList.SingleLine.AvatarWithText.Avatar"></style>

  <style name="MdList.TwoLine.AvatarWithText.Text.First" parent="MdList.TwoLine.IconWithText.Text.First"></style>

  <style name="MdList.TwoLine.AvatarWithText.Text.Second" parent="MdList.TwoLine.IconWithText.Text.Second"></style>

  <style name="MdList.TwoLine.AvatarWithText.Icon" parent="MdList.SingleLine.AvatarWithText.Icon"></style>


</resources>