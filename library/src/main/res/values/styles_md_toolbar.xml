<resources xmlns:tools="http://schemas.android.com/tools">

  <style name="MdTheme.MdToolbar.Theme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    <item name="android:textColorPrimary">?attr/mdTextColor_primaryPalette</item>
    <item name="android:textColorPrimaryInverse">?attr/mdTextColor_backgroundPalette</item>
    <!--android:textColorSecondary is the color of subtitle & the menu overflow icon (three vertical dots) -->
    <item name="android:textColorSecondary">?attr/mdSecondaryTextColor_primaryPalette</item>
    <item name="android:textColorSecondaryInverse">?attr/mdSecondaryTextColor_backgroundPalette</item>
  </style>

  <style name="MdTheme.MdToolbar.PopupTheme" parent="ThemeOverlay.AppCompat.Light">
    <item name="android:textColorPrimary">?attr/mdTextColor_backgroundPalette</item>
    <item name="android:textColorPrimaryInverse">?attr/mdTextColor_primaryPalette</item>
    <item name="android:textColorSecondary">?attr/mdSecondaryTextColor_backgroundPalette</item>
    <item name="android:textColorSecondaryInverse">?attr/mdSecondaryTextColor_primaryPalette</item>
  </style>

  <style name="MdTheme.MdToolbar.PopupMenuStyle" parent="Widget.AppCompat.PopupMenu">

  </style>

  <style name="MdTheme.MdToolbar.TitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
    <item name="android:textColor">?attr/mdTextColor_primaryPalette</item>
  </style>

  <style name="MdTheme.MdToolbar.SubtitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
    <item name="android:textSize">?attr/mdFontSize_caption</item>
    <item name="android:textColor">?attr/mdSecondaryTextColor_primaryPalette</item>
  </style>

  <style name="MdTheme.MdToolbar.ActionMode.TitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionMode.Title">
    <item name="android:textColor">?attr/mdTextColor_primaryPalette</item>
  </style>

  <style name="MdTheme.MdToolbar.ActionMode.SubtitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionMode.Subtitle">
    <item name="android:textSize">?attr/mdFontSize_caption</item>
    <item name="android:textColor">?attr/mdSecondaryTextColor_primaryPalette</item>
  </style>

  <style name="MdTheme.MdToolbar.ActionMode" parent="Widget.AppCompat.ActionMode">
    <item name="background">?attr/mdColor_primaryPalette</item>
    <item name="titleTextStyle">@style/MdTheme.MdToolbar.ActionMode.TitleTextStyle</item>
    <item name="subtitleTextStyle">@style/MdTheme.MdToolbar.ActionMode.SubtitleTextStyle</item>
  </style>

  <style name="MdTheme.MdToolbar.ActionOverflowMenuStyle" parent="Widget.AppCompat.PopupMenu.Overflow">
    <item name="android:popupBackground">@drawable/popup_background_drawable</item>
  </style>

  <!-- Note: based on experiment, icons in toolbar/menu should be resize (icon only, not the whole image) to 82% -->

  <style name="MdToolbar">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">?attr/actionBarSize</item>
    <item name="android:minHeight">?attr/actionBarSize</item>
    <item name="android:paddingRight">?attr/mdLayout_spacing_xs</item>
    <item name="android:background">?attr/mdToolbar_background</item>
    <item name="android:elevation" tools:ignore="NewApi">?attr/mdToolbar_elevation</item>
    <item name="titleTextAppearance">@style/MdTheme.MdToolbar.TitleTextAppearance</item>
    <item name="subtitleTextAppearance">@style/MdTheme.MdToolbar.SubtitleTextAppearance</item>
    <item name="theme">@style/MdTheme.MdToolbar.Theme</item>
    <item name="popupTheme">@style/MdTheme.MdToolbar.PopupTheme</item>
    <item name="popupMenuStyle">@style/MdTheme.MdToolbar.PopupMenuStyle</item>
  </style>

</resources>