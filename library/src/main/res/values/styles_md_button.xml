<resources>

  <style name="MdTheme.MdButton.Raised" parent="@android:style/Widget.Button"></style>

  <style name="MdTheme.MdButton.Raised.Primary" parent="MdTheme.MdButton.Raised">
    <item name="android:textColorSecondary">?attr/mdTextColor_primaryPalette</item>
    <item name="colorButtonNormal">?attr/mdColor_primaryPalette</item>
  </style>

  <style name="MdTheme.MdButton.Raised.Accent" parent="MdTheme.MdButton.Raised">
    <item name="android:textColorSecondary">?attr/mdTextColor_accentPalette</item>
    <item name="colorButtonNormal">?attr/mdColor_accentPalette</item>
  </style>

  <style name="MdTheme.MdButton.Raised.Warn" parent="MdTheme.MdButton.Raised">
    <item name="android:textColorSecondary">?attr/mdTextColor_warnPalette</item>
    <item name="colorButtonNormal">?attr/mdColor_warnPalette</item>
  </style>

  <style name="MdTheme.MdButton.Raised.Background" parent="MdTheme.MdButton.Raised">
    <item name="android:textColorSecondary">?attr/mdTextColor_backgroundPalette</item>
    <item name="colorButtonNormal">?attr/mdColor_backgroundPalette</item>
  </style>

  <style name="MdTheme.MdButton.Flat" parent="@android:style/Widget.Button">
    <item name="android:buttonStyle">?android:attr/borderlessButtonStyle</item>
    <item name="colorButtonNormal">@android:color/transparent</item>
  </style>

  <style name="MdTheme.MdButton.Flat.Primary">
    <item name="android:textColorSecondary">?attr/mdColor_primaryPalette</item>
  </style>

  <style name="MdTheme.MdButton.Flat.Accent">
    <item name="android:textColorSecondary">?attr/mdColor_accentPalette</item>
  </style>

  <style name="MdTheme.MdButton.Flat.Warn">
    <item name="android:textColorSecondary">?attr/mdColor_warnPalette</item>
  </style>

  <style name="MdTheme.MdButton.Flat.Background">
    <item name="android:textColorSecondary">?attr/mdTextColor_backgroundPalette</item>
  </style>

  <style name="MdButton">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <!-- Rasised Button -->

  <style name="MdButton.Raised.Primary" parent="MdButton">
    <item name="android:textColor">?attr/mdTextColor_primaryPalette</item>
    <item name="android:theme">@style/MdTheme.MdButton.Raised.Primary</item>
  </style>

  <style name="MdButton.Raised.Accent" parent="MdButton">
    <item name="android:textColor">?attr/mdTextColor_accentPalette</item>
    <item name="android:theme">@style/MdTheme.MdButton.Raised.Accent</item>
  </style>

  <style name="MdButton.Raised.Warn" parent="MdButton">
    <item name="android:textColor">?attr/mdTextColor_warnPalette</item>
    <item name="android:theme">@style/MdTheme.MdButton.Raised.Warn</item>
  </style>

  <style name="MdButton.Raised.Background" parent="MdButton">
    <item name="android:textColor">?attr/mdTextColor_backgroundPalette</item>
    <item name="android:theme">@style/MdTheme.MdButton.Raised.Background</item>
  </style>

  <!-- Flat Button -->

  <style name="MdButton.Flat.Primary" parent="MdButton">
    <item name="android:textColor">?attr/mdColor_primaryPalette</item>
    <item name="android:theme">@style/MdTheme.MdButton.Flat.Primary</item>
  </style>

  <style name="MdButton.Flat.Accent" parent="MdButton">
    <item name="android:textColor">?attr/mdColor_accentPalette</item>
    <item name="android:theme">@style/MdTheme.MdButton.Flat.Accent</item>
  </style>

  <style name="MdButton.Flat.Warn" parent="MdButton">
    <item name="android:textColor">?attr/mdColor_warnPalette</item>
    <item name="android:theme">@style/MdTheme.MdButton.Flat.Warn</item>
  </style>

  <style name="MdButton.Flat.Background" parent="MdButton">
    <item name="android:textColor">?attr/mdTextColor_backgroundPalette</item>
    <item name="android:theme">@style/MdTheme.MdButton.Flat.Background</item>
  </style>

</resources>