<resources>

  <!-- Small -->

  <style name="MdCardView.Small" parent="">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">?attr/mdLayout_spacing_xs</item>
    <item name="android:layout_marginLeft">?attr/mdLayout_spacing_xs</item>
    <item name="android:layout_marginRight">?attr/mdLayout_spacing_xs</item>
    <item name="android:layout_marginBottom">?attr/mdLayout_spacing_xs</item>
    <item name="cardCornerRadius">?attr/mdLayout_spacing_xxs</item>
    <item name="cardElevation">?attr/mdLayout_spacing_xxs</item>
  </style>

  <!-- Medium -->

  <style name="MdCardView.Medium" parent="">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">?attr/mdLayout_spacing_sm</item>
    <item name="android:layout_marginLeft">?attr/mdLayout_spacing_sm</item>
    <item name="android:layout_marginRight">?attr/mdLayout_spacing_sm</item>
    <item name="android:layout_marginBottom">?attr/mdLayout_spacing_sm</item>
    <item name="cardCornerRadius">?attr/mdLayout_spacing_xxs</item>
    <item name="cardElevation">3dp</item>
  </style>

  <!-- Full -->

  <style name="MdCardView.Full" parent="">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">0dp</item>
    <item name="android:layout_marginLeft">0dp</item>
    <item name="android:layout_marginRight">0dp</item>
    <item name="android:layout_marginBottom">?attr/mdLayout_spacing_md</item>
    <item name="cardCornerRadius">0dp</item>
    <item name="cardElevation">1.8dp</item>
  </style>

</resources>