<merge xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <me.henrytao.mdcore.widgets.MdIcon
    android:id="@android:id/icon2"
    tools:src="@drawable/ic_blank_circle"
    style="@style/Base.MdListItem.Icon" />

  <LinearLayout style="@style/Base.MdListItem.Wrapper">

    <TextView
      android:id="@android:id/text1"
      tools:text="List item title"
      style="@style/Base.MdListItem.Title.Left" />

    <TextView
      android:id="@android:id/text2"
      tools:text="List item subtitle"
      style="@style/Base.MdListItem.Subtitle.Left" />
  </LinearLayout>
</merge>