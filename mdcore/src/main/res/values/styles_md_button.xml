<resources>

  <!-- ////////////////////////////////////////////////////////////////////////// -->
  <!-- Button -->
  <!-- ////////////////////////////////////////////////////////////////////////// -->

  <style name="MdButton" parent="Widget.AppCompat.Button">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="MdButton.Borderless" parent="Widget.AppCompat.Button.Borderless">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="MdButton.Colored" parent="Widget.AppCompat.Button.Colored">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/md_button_colored_text_color</item>
  </style>

  <style name="MdButton.Borderless.Colored" parent="Widget.AppCompat.Button.Borderless.Colored">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/md_button_borderless_colored_text_color</item>
  </style>

  <style name="MdButton.Small" parent="Widget.AppCompat.Button.Small">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:minHeight">40dp</item>
  </style>
</resources>