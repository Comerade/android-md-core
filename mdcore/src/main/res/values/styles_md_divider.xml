<resources>

  <!-- ////////////////////////////////////////////////////////////////////////// -->
  <!-- Horizontal -->
  <!-- ////////////////////////////////////////////////////////////////////////// -->

  <style name="MdDivider">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">@dimen/mdDividerSize</item>
    <item name="android:background">?attr/mdColorDivider_backgroundPalette</item>
  </style>

  <style name="MdDivider.Left">
    <item name="android:layout_marginLeft">@dimen/mdListItemPaddingLeft_lg</item>
  </style>

  <style name="MdDivider.Right">
    <item name="android:layout_marginRight">@dimen/mdListItemPaddingRight_lg</item>
  </style>

  <style name="MdDivider.RightLarge">
    <item name="android:layout_marginRight">@dimen/mdListItemPaddingRight_xlg</item>
  </style>

  <style name="MdDivider.LeftRight" parent="MdDivider.Left">
    <item name="android:layout_marginRight">@dimen/mdListItemPaddingRight_lg</item>
  </style>

  <style name="MdDivider.LeftRightLarge" parent="MdDivider.Left">
    <item name="android:layout_marginRight">@dimen/mdListItemPaddingRight_xlg</item>
  </style>

  <!-- ////////////////////////////////////////////////////////////////////////// -->
  <!-- Vertical -->
  <!-- ////////////////////////////////////////////////////////////////////////// -->

  <style name="MdDivider.Vertical">
    <item name="android:layout_width">@dimen/mdDividerSize</item>
    <item name="android:layout_height">match_parent</item>
  </style>
</resources>