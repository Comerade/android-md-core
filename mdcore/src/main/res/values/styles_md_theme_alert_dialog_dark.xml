  <style name="MdAlertDialog.Style.Dark" parent="Base.MdAlertDialog.Style.Dark" />

  <!-- ////////////////////////////////////////////////////////////////////////// -->
  <!-- Base -->
  <!-- ////////////////////////////////////////////////////////////////////////// -->

  <style name="Base.MdAlertDialog.Theme.Dark" parent="Theme.AppCompat.Dialog.Alert">
    <item name="colorAccent">@color/mdColor_blue_accent</item>

    <item name="alertDialogStyle">@style/MdAlertDialog.Style.Dark</item>

    <item name="buttonStyle">@style/MdButton</item>
    <item name="buttonStyleSmall">@style/MdButton.Small</item>
    <item name="buttonBarButtonStyle">@style/MdButton.Borderless.Colored</item>

    <item name="android:windowTitleStyle">@style/Base.MdAlertDialog.WindowTitleStyle</item>
  </style>

  <style name="Base.MdAlertDialog.Style.Dark" parent="AlertDialog.AppCompat">
    <!-- do nothing -->
  </style>

  <style name="Base.MdAlertDialog.WindowTitleStyle" parent="RtlOverlay.DialogWindowTitle.AppCompat">
    <item name="mdFontWeight">@integer/mdFontWeight_title</item>
  </style>
</resources>