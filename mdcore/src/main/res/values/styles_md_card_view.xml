<resources>

  <style name="MdCardView">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">@dimen/mdLayoutSpacing_xs</item>
    <item name="android:layout_marginLeft">@dimen/mdLayoutSpacing_xs</item>
    <item name="android:layout_marginRight">@dimen/mdLayoutSpacing_xs</item>
    <item name="android:layout_marginBottom">@dimen/mdLayoutSpacing_xs</item>
    <item name="cardUseCompatPadding">true</item>
  </style>

  <style name="MdCardView.Wrapper" parent="">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:paddingTop">@dimen/mdLayoutSpacing_xs</item>
    <item name="android:paddingLeft">@dimen/mdLayoutSpacing_xs</item>
    <item name="android:paddingRight">@dimen/mdLayoutSpacing_xs</item>
    <item name="android:paddingBottom">@dimen/mdLayoutSpacing_xs</item>
  </style>

  <style name="MdCardView.Full">
    <item name="android:layout_marginTop">0dp</item>
    <item name="android:layout_marginLeft">-2dp</item>
    <item name="android:layout_marginRight">-2dp</item>
    <item name="android:layout_marginBottom">0dp</item>
    <item name="cardCornerRadius">0dp</item>
  </style>
</resources>