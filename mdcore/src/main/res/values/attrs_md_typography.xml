<resources>

  <declare-styleable name="MdTypography">

    <attr name="mdTypography_thin" format="string|reference" />
    <attr name="mdTypography_light" format="string|reference" />
    <attr name="mdTypography_regular" format="string|reference" />
    <attr name="mdTypography_medium" format="string|reference" />
    <attr name="mdTypography_bold" format="string|reference" />
    <attr name="mdTypography_black" format="string|reference" />

    <attr name="mdFontWeight" format="integer">
      <enum name="thin" value="10" />
      <enum name="light" value="20" />
      <enum name="regular" value="30" />
      <enum name="medium" value="40" />
      <enum name="bold" value="50" />
      <enum name="black" value="60" />
    </attr>

    <attr name="mdTypography" format="string|reference" />
  </declare-styleable>
</resources>