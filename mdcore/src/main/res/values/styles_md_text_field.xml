<resources>

  <style name="Base.MdEditText" parent="">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:minHeight">48dp</item>
    <item name="android:paddingTop">2dp</item>
    <item name="android:layout_marginLeft">4dp</item>
    <item name="android:layout_marginRight">4dp</item>
  </style>

  <style name="Base.MdEditText.EmptyHintText" parent="TextAppearance.Design.Hint">
    <item name="android:textSize">0dp</item>
  </style>

  <!-- Text field -->
  <style name="MdTextField.EditText" parent="Base.MdEditText" />

  <style name="MdTextField.EditText.FullWidth">
    <item name="android:minHeight">56dp</item>
    <item name="android:paddingTop">14dp</item>
    <item name="android:paddingBottom">16dp</item>
    <item name="android:background">@drawable/md_edit_text_material_full_width</item>
  </style>

  <!-- Floating label -->

  <style name="MdTextField.FloatingLabel" parent="">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:paddingTop">13dp</item>
    <item name="android:paddingLeft">4dp</item>
    <item name="android:paddingRight">4dp</item>
  </style>

  <style name="MdTextField.FloatingLabel.EditText" parent="MdTextField.EditText">
    <item name="android:paddingTop">4dp</item>
    <item name="android:layout_marginLeft">0dp</item>
    <item name="android:layout_marginRight">0dp</item>
  </style>

  <!-- Single-line text field with icon -->
  <style name="MdTextField.TextWithIcon" parent="">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:orientation">horizontal</item>
  </style>

  <style name="MdTextField.TextWithIcon.Icon" parent="">
    <item name="android:layout_width">48dp</item>
    <item name="android:layout_height">48dp</item>
    <item name="android:layout_marginLeft">4dp</item>
    <item name="android:layout_marginRight">12dp</item>
    <item name="android:paddingTop">12dp</item>
    <item name="android:paddingLeft">12dp</item>
    <item name="android:paddingRight">12dp</item>
    <item name="android:paddingBottom">12dp</item>
  </style>

  <!-- Full-wdith text field with counter -->
  <style name="MdTextField.FullTextWithCounter" parent="MdTextField.FloatingLabel">
    <item name="counterEnabled">true</item>
    <item name="hintAnimationEnabled">false</item>
    <item name="android:layout_marginTop">-16dp</item>
    <item name="hintTextAppearance">@style/Base.MdEditText.EmptyHintText</item>
  </style>

  <style name="MdTextField.FullTextWithCounter.EditText" parent="MdTextField.EditText.FullWidth">
    <item name="android:layout_marginLeft">0dp</item>
    <item name="android:layout_marginRight">0dp</item>
    <item name="android:layout_marginBottom">-4dp</item>
  </style>
</resources>