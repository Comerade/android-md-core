<resources>

  <style name="MdTextField.TextOnly" parent="Base.MdEditText" />

  <style name="MdTextField.TextWithIcon" parent="">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:orientation">horizontal</item>
  </style>

  <style name="MdTextField.TextWithIcon.Text" parent="MdTextField.TextOnly" />

  <style name="MdTextField.TextWithIcon.Icon" parent="">
    <item name="android:layout_width">48dp</item>
    <item name="android:layout_height">48dp</item>
    <item name="android:layout_marginLeft">4dp</item>
    <item name="android:layout_marginRight">12dp</item>
    <item name="android:paddingTop">12dp</item>
    <item name="android:paddingLeft">12dp</item>
    <item name="android:paddingRight">12dp</item>
    <item name="android:paddingBottom">12dp</item>
  </style>

  <style name="MdTextField.TextWithLabel" parent="Base.TextInputLayout">
    <item name="android:paddingTop">13dp</item>
    <item name="android:paddingLeft">4dp</item>
    <item name="android:paddingRight">4dp</item>
  </style>

  <style name="MdTextField.TextWithLabel.Text" parent="MdTextField.TextOnly">
    <item name="android:paddingTop">4dp</item>
    <item name="android:layout_marginLeft">0dp</item>
    <item name="android:layout_marginRight">0dp</item>
  </style>

  <style name="MdTextField.FullWidthText" parent="Base.MdEditText">
    <item name="android:minHeight">56dp</item>
    <item name="android:paddingTop">14dp</item>
    <item name="android:paddingBottom">16dp</item>
    <item name="android:background">@drawable/md_edit_text_material_full_width</item>
  </style>

  <style name="MdTextField.FullWidthTextAndCounter" parent="MdTextField.TextWithLabel">
    <item name="counterEnabled">true</item>
    <item name="hintAnimationEnabled">false</item>
    <item name="android:layout_marginTop">-16dp</item>
    <item name="hintTextAppearance">@style/Base.MdTextField.FullWidthTextWithCounter.HintTextAppearance</item>
  </style>

  <style name="MdTextField.FullWidthTextAndCounter.Text" parent="MdTextField.FullWidthText">
    <item name="android:layout_marginLeft">0dp</item>
    <item name="android:layout_marginRight">0dp</item>
    <item name="android:layout_marginBottom">-4dp</item>
  </style>

  <!-- ////////////////////////////////////////////////////////////////////////// -->
  <!-- Base -->
  <!-- ////////////////////////////////////////////////////////////////////////// -->

  <style name="Base.MdEditText" parent="">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:minHeight">48dp</item>
    <item name="android:paddingTop">2dp</item>
    <item name="android:layout_marginLeft">4dp</item>
    <item name="android:layout_marginRight">4dp</item>
  </style>

  <style name="Base.TextInputLayout" parent="">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="Base.MdTextField.FullWidthTextWithCounter.HintTextAppearance" parent="TextAppearance.Design.Hint">
    <item name="android:textSize">0dp</item>
  </style>
</resources>